rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user data (only for role checks on OTHER users)
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    // Helper function to get current user's role
    function getCurrentUserRole() {
      return getUserRole(request.auth.uid);
    }
    
    // Helper function to check if user is superadmin
    function isSuperadmin() {
      return isAuthenticated() && getCurrentUserRole() == 'superadmin';
    }
    
    // Helper function to check if user is agent
    function isAgent() {
      return isAuthenticated() && getCurrentUserRole() == 'agent';
    }
    
    // Helper function to check if user is player
    function isPlayer() {
      return isAuthenticated() && getCurrentUserRole() == 'player';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can always read their own data (simple check first)
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Superadmin can read all users
      allow read: if isSuperadmin();
      
      // Agents can read their players (check parentId)
      allow read: if isAgent() && resource.data.parentId == request.auth.uid;
      
      // NEW: Users can create their own document when registering
      // IMPORTANT: All new registrations must be 'player' role only
      // Role changes can only be done by SuperAdmin from the panel
      allow create: if isAuthenticated() && 
        request.auth.uid == userId &&
        request.resource.data.keys().hasAll(['email', 'username', 'role', 'balance', 'credit', 'isBanned']) &&
        request.resource.data.role == 'player' && // Only 'player' role allowed for new registrations
        request.resource.data.balance == 0 &&
        request.resource.data.credit == 0 &&
        request.resource.data.isBanned == false;
      
      // Users can update their own data (limited fields)
      allow update: if isAuthenticated() && request.auth.uid == userId && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['updatedAt']);
      
      // Superadmin can create/update any user
      allow create, update: if isSuperadmin();
      
      // Agents can create players under them
      allow create: if isAgent() && request.resource.data.parentId == request.auth.uid && request.resource.data.role == 'player';
    }
    
    // Coupons collection
    match /coupons/{couponId} {
      // Users can read their own coupons
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        resource.data.agentId == request.auth.uid ||
        isSuperadmin()
      );
      
      // Players can create their own coupons
      allow create: if isAuthenticated() && isPlayer() && request.resource.data.userId == request.auth.uid;
      
      // Superadmin can update coupons (for settlement)
      allow update: if isSuperadmin();
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Users can read their own transactions
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        (isAgent() && resource.data.agentId == request.auth.uid) ||
        isSuperadmin()
      );
      
      // Superadmin and agents can create transactions (for balance/credit operations)
      allow create: if isAuthenticated() && (
        isSuperadmin() ||
        (isAgent() && request.resource.data.agentId == request.auth.uid)
      );
    }
    
    // Credit history collection
    match /credit_history/{historyId} {
      // Users can read credit history where they are involved
      allow read: if isAuthenticated() && (
        resource.data.fromUserId == request.auth.uid ||
        resource.data.toUserId == request.auth.uid ||
        isSuperadmin()
      );
      
      // Superadmin and agents can create credit history (for pending credits)
      allow create: if isAuthenticated() && (
        isSuperadmin() ||
        (isAgent() && request.resource.data.fromUserId == request.auth.uid)
      );
      
      // Superadmin can update credit history (for approval)
      allow update: if isSuperadmin();
    }
  }
}
